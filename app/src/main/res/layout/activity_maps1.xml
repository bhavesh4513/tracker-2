<LinearLayoutLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bam.tracker.MapsActivity1">
    <fragment
        android:name="com.example.bam.tracker.frag"
        android:id="@+id/what"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/frag"
        />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/what"
        android:layout_alignLeft="@+id/what"
        android:layout_alignStart="@+id/what"
        tools:layout="@layout/activity_maps1"/>
</LinearLayoutLayout>
